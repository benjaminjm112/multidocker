{
    "AWSEBDockerrunVersion": 2,
    "authentication": {
        "bucket": "eb-docker-creds1",
        "key": "dockercfg"
        },
    "containerDefinitions": [
        {
            "name": "client",
            "image": "benjaminjm112/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "benjaminjm112/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {

            "name": "worker",
            "image": "benjaminjm112/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
          
            "name": "nginx",
            "image": "benjaminjm112/multi-nginx",
            "essential": true,
            
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}